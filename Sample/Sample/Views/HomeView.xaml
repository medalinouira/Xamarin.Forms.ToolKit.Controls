<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.Views.HomeView"
             Title="Xamarin.Forms.ToolKit.Controls"
             BindingContext="{Binding Home, Source={StaticResource Locator}}">

    <ContentPage.Content>

        <ContentView x:Name="contentView"
                     ControlTemplate="{StaticResource MyTemplate}">

            <ScrollView>

                <StackLayout VerticalOptions="CenterAndExpand">

                    <Button Text="HideableToolbarItem"
                            Style="{StaticResource BtnPink}"
                            Command="{Binding Path=BtnTappedCommand}"
                            CommandParameter="HideableToolbarItem"/>

                </StackLayout>

            </ScrollView>

        </ContentView>

    </ContentPage.Content>

</ContentPage>